# Tidbyt Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to git!

# Your Tidbyt device ID (e.g., unequally-sought-completed-snipe-8e1)
TIDBYT_DEVICE_ID=your-device-id-here

# Your Tidbyt API token
TIDBYT_API_TOKEN=your-api-token-here

# Finnhub API key for stock data
FINNHUB_API_KEY=your-finnhub-api-key-here

# Stock symbols to track (comma-separated, no spaces)
STOCK_SYMBOLS=AAPL,GOOGL,MSFT,TSLA

# Installation ID for the app (alphanumeric only)
INSTALLATION_ID=stockticker
